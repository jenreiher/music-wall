<% if @track && @track.errors.any? %>
  <div>
    <strong>Some issues with your submission, please fix them:</strong>
    <ul>
      <% @track.errors.full_message.each do |track| %>
        <li><%= track %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="track">
  <form  class="form-horizontal" method="post" action="/tracks" >
    <div class="form-group">
      <label class="col-sm-2 control-label">Song Name:</label>
      <div class="col-sm-10">
        <input type ="text" class="form-control" name="song_title" value="<%= @track && @track.song_title %>">
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Author:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="author" value="<%= @track && @track.author %>">
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Source URL:</label>
      <div class="col-sm-10">
        <input type="url" class="form-control" name="url" value="<%= @track && @track.url %>">
      </div>
    <div class="col-sm-offset-2 col-sm-10">
      <input class="btn btn-primary" type="submit" value="Add Track">
    </div>
  </form>
</div>